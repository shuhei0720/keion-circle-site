// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth用のモデル
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  avatarUrl     String?
  role          String    @default("member") // admin, member
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  messages      Message[]
  schedules     ScheduleResponse[]
  postParticipants PostParticipant[]
  postLikes     PostLike[]
  activitySchedules ActivitySchedule[]
  events        Event[]
  activityParticipants ActivityParticipant[]
  eventParticipants EventParticipant[]
  comments      Comment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 投稿機能
model Post {
  id          String   @id @default(cuid())
  title       String
  content     String?
  youtubeUrl  String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants PostParticipant[]
  likes       PostLike[]
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 投稿参加機能
model PostParticipant {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  status    String   // "participating", "not_participating"
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

// 投稿いいね機能
model PostLike {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

// チャット機能
model Message {
  id        String   @id @default(cuid())
  content   String
  fileUrl   String?
  fileName  String?
  fileType  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

// スケジュール調整機能
model Schedule {
  id          String             @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  dates       ScheduleDate[]
}

model ScheduleDate {
  id         String             @id @default(cuid())
  scheduleId String
  date       DateTime
  schedule   Schedule           @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  responses  ScheduleResponse[]
  createdAt  DateTime           @default(now())
}

model ScheduleResponse {
  id             String       @id @default(cuid())
  scheduleDateId String
  userId         String
  status         String       // "available", "maybe", "unavailable"
  comment        String?
  scheduleDate   ScheduleDate @relation(fields: [scheduleDateId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@unique([scheduleDateId, userId])
}

// コメント機能（投稿、活動スケジュール、イベント用）
model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // ポリモーフィック関連
  postId              String?
  activityScheduleId  String?
  eventId             String?
  
  post              Post?              @relation(fields: [postId], references: [id], onDelete: Cascade)
  activitySchedule  ActivitySchedule?  @relation(fields: [activityScheduleId], references: [id], onDelete: Cascade)
  event             Event?             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 活動スケジュール機能
model ActivitySchedule {
  id          String   @id @default(cuid())
  title       String
  content     String   // マークダウン形式
  date        DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants ActivityParticipant[]
  comments    Comment[]
  reportCreated Boolean @default(false) // 活動報告が作成されたか
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityParticipant {
  id                  String            @id @default(cuid())
  activityScheduleId  String
  userId              String
  activitySchedule    ActivitySchedule  @relation(fields: [activityScheduleId], references: [id], onDelete: Cascade)
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt           DateTime          @default(now())

  @@unique([activityScheduleId, userId])
}

// イベント機能
model Event {
  id            String   @id @default(cuid())
  title         String
  content       String   // マークダウン形式
  date          DateTime
  location      String?  // 開催場所
  songTitle     String?  // 課題曲
  songSheetUrl  String?  // 楽譜URL
  songYoutubeUrl String? // YouTube URL
  parts         String?  // JSONとして保存（各パート担当）
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants  EventParticipant[]
  comments      Comment[]
  reportCreated Boolean @default(false) // イベント報告が作成されたか
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model EventParticipant {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([eventId, userId])
}
