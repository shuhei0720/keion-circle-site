// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth用のモデル
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? // メールアドレス検証日時
  password      String?
  avatarUrl     String?
  bio           String?   // 自己紹介
  instruments   String?   // 演奏できる楽器リスト（JSON文字列形式）
  role          String    @default("member") // site_admin, admin, member
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  messages      Message[]
  postParticipants PostParticipant[]
  postLikes     PostLike[]
  activitySchedules ActivitySchedule[]
  events        Event[]
  activityParticipants ActivityParticipant[]
  eventParticipants EventParticipant[]
  comments      Comment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 投稿機能
model Post {
  id          String   @id @default(cuid())
  title       String
  content     String?
  youtubeUrls String[] // YouTube URL配列
  images      String[] // Supabase Storageの画像URL配列
  userId      String
  type        String?  // 投稿タイプ（本番DBに存在）
  sourceId    String?  // ソースID（本番DBに存在）
  eventId     String?  // 報告元のイベントID
  activityScheduleId String?  // 報告元の活動スケジュールID
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event       Event?   @relation("EventPosts", fields: [eventId], references: [id], onDelete: SetNull)
  participants PostParticipant[]
  likes       PostLike[]
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 投稿参加機能
model PostParticipant {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  status    String   // "participating", "not_participating"
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

// 投稿いいね機能
model PostLike {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

// チャット機能
model Message {
  id        String   @id @default(cuid())
  content   String
  fileUrl   String?
  fileName  String?
  fileType  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

// コメント機能（投稿、活動スケジュール、イベント用）
model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // ポリモーフィック関連
  postId              String?
  activityScheduleId  String?
  eventId             String?
  
  post              Post?              @relation(fields: [postId], references: [id], onDelete: Cascade)
  activitySchedule  ActivitySchedule?  @relation(fields: [activityScheduleId], references: [id], onDelete: Cascade)
  event             Event?             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 活動スケジュール機能
model ActivitySchedule {
  id          String   @id @default(cuid())
  title       String
  description String?  // 説明（本番DBに存在）
  content     String?  // マークダウン形式
  date        DateTime?
  location    String?  // 開催場所名
  locationUrl String?  // 開催場所URL（Google Mapsなど）
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  participants ActivityParticipant[]
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityParticipant {
  id                  String            @id @default(cuid())
  activityScheduleId  String
  userId              String
  activitySchedule    ActivitySchedule  @relation(fields: [activityScheduleId], references: [id], onDelete: Cascade)
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt           DateTime          @default(now())

  @@unique([activityScheduleId, userId])
}

// イベント機能
model Event {
  id            String   @id @default(cuid())
  title         String
  description   String?  // 説明（本番DBに存在）
  content       String?  // マークダウン形式
  date          DateTime?
  locationName  String?  // 開催場所名
  locationUrl   String?  // 開催場所URL（Google Mapsなど）
  songs         String?  // 課題曲配列（JSON文字列）[{title, sheetUrl, youtubeUrl, parts: [{instrument, player}]}]
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  participants  EventParticipant[]
  comments      Comment[]
  posts         Post[]   @relation("EventPosts")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model EventParticipant {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([eventId, userId])
}

// テンプレート機能
model Template {
  id        String   @id @default(cuid())
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
