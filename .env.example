# 認証設定
AUTH_URL=http://localhost:3000
AUTH_SECRET=your-random-secret-key-at-least-32-chars
AUTH_TRUST_HOST=true

# NextAuth v5用（本番環境でも同じ値を設定）
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-random-secret-key-at-least-32-chars

# データベース設定（Supabase PostgreSQL）
# 開発環境・本番環境共に: Transaction pooler（ポート6543）を使用
DATABASE_URL="postgresql://postgres.xxxxx:password@aws-0-ap-northeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Google OAuth認証
# Google Cloud Console (https://console.cloud.google.com/) で取得
# 承認済みのリダイレクトURI: 
#   - http://localhost:3000/api/auth/callback/google (開発環境)
#   - https://bold-osaka-keion.fyi/api/auth/callback/google (本番環境)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Supabase設定（画像アップロード用）
# Supabase Dashboard → Project Settings → API で取得
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Resend設定（メール送信用）
# https://resend.com/api-keys で取得
# 開発環境ではダミー値でOK（メールはログに出力される）
RESEND_API_KEY=re_dev_dummy_key_for_local_development
# 本番環境: bold-osaka-keion.fyi ドメインを使用
RESEND_FROM_EMAIL=noreply@bold-osaka-keion.fyi

# Cloudflare R2設定（動画ストレージ用）
# Cloudflare Dashboard → R2 → Settings で取得
# Account ID: アカウント設定から確認
# Access Key ID/Secret: API Tokens → R2 API tokens から作成
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=keion-videos
# 公開URL（R2カスタムドメインまたはCloudflare Workers経由）
NEXT_PUBLIC_R2_PUBLIC_URL=https://videos.bold-osaka-keion.fyi
